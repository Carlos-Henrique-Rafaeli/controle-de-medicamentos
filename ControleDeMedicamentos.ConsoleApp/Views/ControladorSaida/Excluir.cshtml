@using ControleDeMedicamentos.ConsoleApp.Models;

@model ExcluirSaidaViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Exclusão de Requisição de Saída - Gestão de Medicamentos</title>
    </head>

    <body>
        <h1>Gestão de Medicamentos</h1>

        <hr />

        <a href="/">Página Inicial</a> /
        <a href="/saidas/cadastrar">Cadastrar Nova Requisição</a> /
        <a href="/saidas/visualizar">Visualizar Requisições</a>

        <hr />

        <h3>Exclusão de Requisição</h3>

        <p>Você tem certeza que deseja excluir o registro "@Model.Nome"?</p>

        <form action="/saidas/excluir/@Model.Id" method="post">
            <button type="submit">Confirmar</button>
            <a href="/saidas/visualizar">Voltar</a>
        </form>
    </body>
</html>