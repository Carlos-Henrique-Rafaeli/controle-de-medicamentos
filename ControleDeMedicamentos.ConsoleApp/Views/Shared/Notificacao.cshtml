@using ControleDeMedicamentos.ConsoleApp.Models;

@model NotificacaoViewModel;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.TituloPagina - Gestão de Medicamentos</title>
    <style>
        body {
            margin: 0;
            background-color: #333333;
            color: white;
            font-family: Tahoma, sans-serif;
        }

        a {
            color: skyblue;
            text-decoration: none;
        }

            a:hover {
                color: deepskyblue;
            }

        nav {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 96px;
            justify-content: space-between;
            padding: 0 128px;
        }

            nav > h2 {
                margin: 0;
                color: dodgerblue;
            }

            nav > ul {
                display: flex;
                gap: 32px;
                list-style: none;
            }

        header {
            padding: 0 192px;
        }

        main {
            padding: 0 192px;
            display: flex;
            flex-wrap: wrap;
            gap: 32px;
        }
    </style>
</head>

<body>
    <nav>
        <h2>Gestão de Equipamentos</h2>
        <ul>
            <li><a href="/">Página Inicial</a></li>
        </ul>
    </nav>

    <header>
        <h2>@Model.TituloPagina</h2>
    </header>

    <main>
        <p>@Model.Mensagem</p>
    </main>
</body>
</html>