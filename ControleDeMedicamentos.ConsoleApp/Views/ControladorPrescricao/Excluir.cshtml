@using ControleDeMedicamentos.ConsoleApp.Models;

@model ExcluirPrescricaoViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Exclusão de Prescrição - Gestão de Medicamentos</title>
    </head>

    <body>
        <h1>Gestão de Medicamentos</h1>

        <hr />

        <a href="/">Página Inicial</a> /
        <a href="/prescricoes/cadastrar">Cadastrar Nova Prescrição</a> /
        <a href="/prescricoes/visualizar">Visualizar Prescrições</a>

        <hr />

        <h3>Exclusão de Prescrição</h3>

        <p>Você tem certeza que deseja excluir o registro "@Model.Nome"?</p>

        <form action="/prescricoes/excluir/@Model.Id" method="post">
            <button type="submit">Confirmar</button>
            <a href="/prescricoes/visualizar">Voltar</a>
        </form>
    </body>
</html>