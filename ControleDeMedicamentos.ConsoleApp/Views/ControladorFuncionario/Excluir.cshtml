@using ControleDeMedicamentos.ConsoleApp.Models;

@model ExcluirFuncionarioViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Exclusão de Funcionário - Gestão de Medicamentos</title>
    </head>

    <body>
        <nav>
            <h2>Gestão de Medicamentos</h2>
            <ul>
                <li><a href="/">Página Inicial</a></li>
                <li><a href="/funcionarios/cadastrar">Cadastrar Novo Funcionário</a></li>
                <li><a href="/funcionarios/visualizar">Visualizar Funcionários</a></li>
            </ul>
        </nav>

        <header>
            <h2>Exclusão de Funcionário</h2>
        </header>

        <main>
            <p>Você tem certeza que deseja excluir o registro "@Model.Nome"?</p>

            <form action="/funcionarios/excluir/@Model.Id" method="post">
                <div class="option">
                    <button type="submit">Confirmar</button>
                    <br/>
                    <a href="/funcionarios/visualizar">Voltar</a>
                </div>
            </form>
        </main>
    </body>
</html>