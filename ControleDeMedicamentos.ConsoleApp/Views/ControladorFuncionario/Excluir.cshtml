@using ControleDeMedicamentos.ConsoleApp.Models;

@model ExcluirFuncionarioViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Funcionário";
}

@section Style {
    <link rel="stylesheet" href="~/Register.css" />
}

@section Header {
    <a href="/funcionarios/cadastrar">Cadastrar Novo Funcionário</a>
    <a href="/funcionarios/visualizar">Visualizar Funcionários</a>
}

<form action="/funcionarios/excluir/@Model.Id" method="post">
    <p>Você tem certeza que deseja excluir o registro <strong>@Model.Nome?</strong></p>

    <div class="button-interaction">
        <button type="submit" id="botaoCustom">Confirmar</button>
        <a type="button" id="botaoCustom" href="/funcionarios/visualizar">Voltar</a>
    </div>
</form>
