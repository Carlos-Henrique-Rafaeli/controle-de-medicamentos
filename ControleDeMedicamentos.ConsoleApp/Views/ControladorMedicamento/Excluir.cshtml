@using ControleDeMedicamentos.ConsoleApp.Models;

@model ExcluirMedicamentoViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Exclusão de Medicamento - Gestão de Medicamentos</title>
    </head>

    <body>
        <h1>Gestão de Medicamentos</h1>

        <hr />

        <a href="/">Página Inicial</a> /
        <a href="/medicamentos/cadastrar">Cadastrar Novo Medicamento</a> /
        <a href="/medicamentos/visualizar">Visualizar Medicamentos</a>

        <hr />

        <h3>Exclusão de Medicamento</h3>

        <p>Você tem certeza que deseja excluir o registro "@Model.Nome"?</p>

        <form action="/medicamentos/excluir/@Model.Id" method="post">
            <button type="submit">Confirmar</button>
            <a href="/medicamentos/visualizar">Voltar</a>
        </form>
    </body>
</html>