@using ControleDeMedicamentos.ConsoleApp.Models;

@model CadastrarMedicamentoViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Cadastro de Medicamento - Gestão de Medicamentos</title>
    </head>

    <body>
        <h1>Gestão de Medicamentos</h1>

        <hr />

        <a href="/">Página Inicial</a> |
        <a href="/medicamentos/visualizar">Visualizar Medicamentos</a>

        <hr />

        <h3>Cadastro de Medicamento</h3>

        <form action="/medicamentos/cadastrar" method="post">
            <label>Nome do Medicamento:</label>
            <br />
            <input type="text" name="nome" />

            <br />

            <label>Descrição do Medicamento:</label>
            <br />
            <input type="text" name="descricao" />

            <br />

            <label>Estoque do Medicamento:</label>
            <br />
            <input type="text" name="estoque" />
            
            <br />
            <label for="FornecedorId">Fornecedor do Medicamento:</label>
            <br />
            <select name="FornecedorId" id="FornecedorId">
            @foreach (var fornecedor in Model.FornecedoresDisponiveis)
            {
                <option value="@fornecedor.Id">@fornecedor.Nome</option>
            }
            </select>
            
            <hr />

            <button type="submit">Gravar</button>

        </form>
    </body>
</html>