@using ControleDeMedicamentos.ConsoleApp.Models;

@model ExcluirEntradaViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Exclusão de Entrada - Gestão de Medicamentos</title>
    </head>

    <body>
        <h1>Gestão de Medicamentos</h1>

        <hr />

        <a href="/">Página Inicial</a> /
        <a href="/entradas/cadastrar">Cadastrar Nova Entrada</a> /
        <a href="/entradas/visualizar">Visualizar Entradas</a>

        <hr />

        <h3>Exclusão de Entrada</h3>

        <p>Você tem certeza que deseja excluir o registro "@Model.Nome"?</p>

        <form action="/entradas/excluir/@Model.Id" method="post">
            <button type="submit">Confirmar</button>
            <a href="/entradas/visualizar">Voltar</a>
        </form>
    </body>
</html>