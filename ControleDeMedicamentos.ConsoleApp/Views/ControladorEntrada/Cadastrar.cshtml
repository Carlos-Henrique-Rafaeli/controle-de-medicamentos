@using ControleDeMedicamentos.ConsoleApp.Models;

@model CadastrarEntradaViewModel;

<!Doctype html>
<html>
    <head>
        <meta charset="utf-8" />
        <title>Cadastro de Entrada - Gestão de Medicamentos</title>
    <style>
        body {
            margin: 0;
            background-color: #333333;
            color: white;
            font-family: Tahoma, sans-serif;
        }

        a {
            color: skyblue;
            text-decoration: none;
        }

            a:hover {
                color: deepskyblue;
            }


        nav {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            gap: 96px;
            justify-content: space-between;
            padding: 0 128px;
        }

            nav > h2 {
                margin: 0;
                color: dodgerblue;
            }

            nav > ul {
                display: flex;
                gap: 32px;
                list-style: none;
            }

        header {
            padding: 0 192px;
        }

        main {
            padding: 0 192px;
            display: flex;
            flex-wrap: wrap;
            gap: 32px;
        }

            main > ul {
                list-style: none;
            }

        .option {
            padding: 0 16px;
            width: 256px;
        }
        
        .option > input[type=text] {
            outline: none;
            width: 100%;
            padding: 12px 24px;
            margin: 8px 0;
            box-sizing: border-box;
        }

        .option > input[type=date] {
            padding: 8px 12px;
            margin: 8px 0;
        }
        
        .option > button {
            background-color: #333333;
            color: white;
            border: 2px solid dodgerblue;
            border-radius: 8px;
            font-size: 32px;
            transition-duration: 0.4s;
        }

        .option > button:hover{
            background-color: dodgerblue;
        }

    </style>
    </head>

    <body>
        <nav>
            <h2>Gestão de Medicamentos</h2>
            <ul>
                <li><a href="/">Página Inicial</a></li>
                <li><a href="/entradas/visualizar">Visualizar Entradas</a></li>
            </ul>
        </nav>

        <header>
            <h2>Cadastro de Medicamento</h2>
        </header>

        <main>
            <form action="/entradas/cadastrar" method="post">
                <div class="option">
                    <label>Data da Entrada:</label>
                    <br />
                    <input type="date" name="data" />
                </div>
                
                <div class="option">
                    <label for="FuncionarioId">Funcionario da Entrada:</label>
                    <br />
                    <select name="FuncionarioId" id="FuncionarioId">
                        @foreach (var f in Model.FuncionariosDisponiveis)
                        {
                            <option value="@f.Id">@f.Nome</option>
                        }
                    </select>
                </div>
                
                <div class="option">
                    <label for="MedicamentoId">Medicamento da Entrada:</label>
                    <br />
                    <select name="MedicamentoId" id="MedicamentoId">
                        @foreach (var m in Model.MedicamentosDisponiveis)
                        {
                            <option value="@m.Id">@m.Nome</option>
                        }
                    </select>
                </div>

                <div class="option">
                    <label>Quantidade do Medicamento:</label>
                    <br />
                    <input type="text" name="quantidade" />
                </div>
                
                <div class="option">
                    <button type="submit">Gravar</button>
                </div>
            </form>
        </main>
    </body>
</html>